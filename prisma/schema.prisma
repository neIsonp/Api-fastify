generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  salt     String
  products Product[]
}

model Product {
  id       String   @id @default(uuid())
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  title    String   @db.Char(255)
  content  String?
  price    Float
  owner    User     @relation(fields: [userId], references: [id])
  userId   String
}
